<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.sns.like.mapper.LikeMapper">
	 <select id="selectLikeByUserIdPostId" resultType="com.sns.like.domain.Like">
	 	SELECT
	 		`userId`
			,`postId`
			,`createdAt`
	 	FROM
	 		`like`
	 	WHERE
	 		`userId` = #{userId} AND postId = #{postId} 
	 </select>
	 
	  <select id="selectHeartByUserIdPostId" resultType="boolean">
	 	SELECT
	 		`userId`
			,`postId`
			,`createdAt`
	 	FROM
	 		`like`
	 	WHERE
	 		`userId` = #{userId} AND postId = #{postId} 
	 </select>
	 
	 <delete id = "deleteLike">
	 	DELETE FROM
	 		`like`
	 	WHERE
	 		`userId` = #{userId} AND postId = #{postId} 
	 </delete>
	 
	 <insert id ="insertLike">
		 INSERT INTO `like`
		 (
		 	`userId`
			,`postId`
			,`createdAt`
		 )
		 VALUES
		 (
		 	#{userId}
		 	,#{postId}
		 	,NOW()
		 )
	 </insert>
	  <select id="likeCount" resultType="int">
	 	SELECT
	 		count(*)
	 	FROM
	 		`like`
	 	WHERE
	 		postId = #{postId} 
	 </select>
 </mapper>